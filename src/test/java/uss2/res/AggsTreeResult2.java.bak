package uss2.res;

import java.io.Serializable;
import java.util.Map;

import uss2.es.uss.res.BaseResult;

/**
 * USS aggs tree result
 * 
 * @author Ponfee
 */
public class AggsTreeResult2 extends BaseResult {

    private static final long serialVersionUID = -8508458241937662387L;

    private Map<String, AggsTreeItem[]> aggs;

    public AggsTreeResult2() {}

    public AggsTreeResult2(BaseResult base) {
        super(base);
    }

    public Map<String, AggsTreeItem[]> getAggs() {
        return aggs;
    }

    public void setAggs(Map<String, AggsTreeItem[]> aggs) {
        this.aggs = aggs;
    }

    public AggsFlatResult2 toAggsFlatResult() {
        return new AggsFlatResult2(this);
    }

    public static class AggsTreeItem implements Serializable {
        private static final long serialVersionUID = 8638064268630624314L;

        private String         agg; // aggregation alias name
        private String         key; // key
        private int            cnt; // doc_count
        private Object         val; // value
        private AggsTreeItem[] sub; // sub aggregation

        public String getAgg() {
            return agg;
        }

        public void setAgg(String agg) {
            this.agg = agg;
        }

        public String getKey() {
            return key;
        }

        public void setKey(String key) {
            this.key = key;
        }

        public int getCnt() {
            return cnt;
        }

        public void setCnt(int cnt) {
            this.cnt = cnt;
        }

        public Object getVal() {
            return val;
        }

        public void setVal(Object val) {
            this.val = val;
        }

        public AggsTreeItem[] getSub() {
            return sub;
        }

        public void setSub(AggsTreeItem[] sub) {
            this.sub = sub;
        }
    }

}
